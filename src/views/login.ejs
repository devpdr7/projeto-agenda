<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Criar conta ou entrar</h1>
            <p class="text-center lead">Faça login ou crie sua conta, caso não tenha uma.</p>

            <%- include('includes/messages') %>

            <div class="row">
                <div class="col-lg">
                    <h4>Faça seu cadastro</h4>
                    <p>Caso não possua uma conta, preencha o formulário abaixo.</p>
                    <form class="form-cadastro" action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                          <label for="registerEmail">Seu email</label>
                          <input type="email" name="email" class="form-control" id="registerEmail" aria-describedby="emailHelp" placeholder="exemplo@gmail.com">
                        </div>
                        <div class="form-group my-3">
                          <label for="inputSenhaRegister">Sua senha</label>
                          <input type="password" name="password" class="form-control" id="inputSenhaRegister" aria-describedby="emailHelp" placeholder="exemplo@gmail.com">
                        </div>
                        <button type="submit" class="btn btn-primary my-2">Criar minha conta</button>
                      </form>
                </div>
                <div class="col-lg">
                    <h4>Fazer login</h4>
                    <p>Caso já possua uma conta, entre com a mesma abaixo.</p> <br>
                    <form class="form-login" action="/login/login" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                          <label for="loginEmail">Seu email</label>
                          <input type="email" name="email" class="form-control" id="loginEmail" aria-describedby="emailHelp" placeholder="exemplo@gmail.com">
                        </div>
                        <div class="form-group my-3">
                          <label for="inputSenhaLogin">Sua senha</label>
                          <input type="password" name="password" class="form-control" id="inputSenhaLogin" aria-describedby="emailHelp" placeholder="exemplo@gmail.com">
                        </div>
                        <button type="submit" class="btn btn-primary my-2">Entrar</button>
                      </form>
                </div>
            </div>

        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>